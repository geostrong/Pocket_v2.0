<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <!-- solid background -->
        <solid android:color="#FF8C00"/>
        <gradient
            android:angle="0"
            android:centerX="50%"
            android:centerColor="#5e76fa"
            android:startColor="#5e76fa"
            android:endColor="#5e76fa"
            android:type="linear"
            />
        <!-- draw 35 dp radius for each corner -->
        <corners android:radius="10dp"/>
    </shape>
</item>
</selector>