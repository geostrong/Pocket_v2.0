<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myPocketButton"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/pocketlayout"
        android:clickable="true"
        android:elevation="1dp"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="32dp"
            android:text="@string/last_updated"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/lastUpdated2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="46dp"
            android:autoText="false"
            android:text="Available Balance"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="191dp"
            android:layout_height="49dp"
            android:layout_below="@+id/lastUpdated2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="70dp"
            android:text="@string/balance"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="252dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <Button
        android:id="@+id/scanQRBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/menubuttonlayout"
        android:text="Scan QR"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/reqBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quickQRBtn"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <Button
        android:id="@+id/reqBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/menubuttonlayout"
        android:text="NFC/QR"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scanQRBtn"
        app:layout_constraintTop_toTopOf="@+id/scanQRBtn" />

    <Button
        android:id="@+id/quickQRBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/menubuttonlayout"
        android:drawableTop="@drawable/ic_notifications_black_24dp"
        android:paddingTop="14dp"
        android:text="Quick QR"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toStartOf="@+id/scanQRBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scanQRBtn" />

</android.support.constraint.ConstraintLayout>